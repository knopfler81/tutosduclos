<p id="notice"><%= notice %></p>

<h1>Listing Tutos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutos.each do |tuto| %>
        <%= tuto.name %>
      <tr>
        <td><%= link_to 'Show', tuto %></td>
        <td><%= link_to 'Edit', edit_tuto_path(tuto) %></td>
        <td><%= link_to 'Destroy', tuto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tuto', new_tuto_path %>
