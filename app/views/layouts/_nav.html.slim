nav.navbar.navbar-inverse.navbar-fixed-top
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed[type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"]
        span.sr-only
          | Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-brand
        = link_to "Tutos", "https://duclostutos.herokuapp.com/", class: "tuto_link"


    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        li.dropdown
          a.dropdown-toggle[href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"]
            = t("nav.title-tuto")
            span.caret
          ul.dropdown-menu
            li
              =link_to  t("nav.see-tuto"), tutos_path
            li
              = link_to t("nav.suggest-tuto"), new_tuto_path

        li.dropdown
          a.dropdown-toggle[href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"]
            -if user_signed_in?

              = image_tag(current_user.facebook_picture_url || current_user.avatar.url(:thumb), class: "avatar_small")
              span.caret
              ul.dropdown-menu
                li
                  =link_to t("nav.logout"), logout_path
                  = link_to t("nav.account"), account_path
            -else

              li
                =link_to t("nav.login"), login_path
        li.dropdown
          a.dropdown-toggle[href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"]
            = t("nav.lang")
            span.caret
          ul.dropdown-menu
            li
              =link_to_unless_current t("nav.en"), locale: "en"
            li
              =link_to_unless_current t("nav.fr"), locale: "fr"
            li
              =link_to_unless_current t("nav.es"), locale: "es"




